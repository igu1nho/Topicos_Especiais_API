    <fragment
        android:id="@+id/nav_contato"
        android:name="com.cursoandroid.navigationdrawer.ui.contato.ContatoFragment"
        android:label="@string/menu_contato"
        tools:layout="@layout/fragment_contato" />

    <fragment
        android:id="@+id/nav_alterar_senha"
        android:name="com.cursoandroid.navigationdrawer.ui.configuracoes.AlterarSenhaFragment"
        android:label="@string/menu_alterar_senha"
        tools:layout="@layout/fragment_alterar_senha" />

    <fragment
        android:id="@+id/nav_carreiras"
        android:name="com.cursoandroid.navigationdrawer.ui.carreiras.CarreirasFragment"
        android:label="@string/menu_carreiras"
        tools:layout="@layout/fragment_carreiras" />

    <fragment
        android:id="@+id/nav_percepcoes"
        android:name="com.cursoandroid.navigationdrawer.ui.informacoes.InformacoesFragment"
        android:label="@string/menu_percepcoes"
